<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ThermalSim.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Button
                x:Name="StartBtn"
                Text="Start" 
                SemanticProperties.Hint="Starts the thermal simulation"
                Clicked="OnStartClicked"
                HorizontalOptions="Fill" />
            <Button
                x:Name="StopBtn"
                Text="Stop" 
                SemanticProperties.Hint="Stops the thermal simulation"
                Clicked="OnStopClicked"
                HorizontalOptions="Fill" />     
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
